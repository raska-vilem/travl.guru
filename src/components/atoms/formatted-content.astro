---
interface Props {
    content: string;
    class?: string;
}

const { content, class: className } = Astro.props;
---

<div class={className} set:html={content}></div>

<style>
@reference '#global';

div {
    h1 {
        @apply text-xl md:text-4xl font-bold w-full;
    }

    h2 {
        @apply text-lg md:text-2xl font-bold w-full;
    }

    p {
        @apply text-base md:text-lg font-normal w-full;
    }
}
</style>
